<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 顺序很重要，当匹配到第一个后不再向后查找 -->
	
	<definition name="login" extends="indexTemplateLayout">
		<put-attribute name="login" value="/WEB-INF/views/login.jsp" />
	</definition>
	
	<definition name="*/*" extends="indexTemplateLayout">
		<put-attribute name="menu" value="/WEB-INF/views/{1}/menu.jsp" />
		<put-attribute name="path" value="{1}" />  
		<put-attribute name="title" value="{2}" />  
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
</tiles-definitions>
